<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfddce"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.toshiba.happyfamily.Bson">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome"
        android:layout_centerVertical="true"
        android:id="@+id/imageView"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/son"
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="BROTHER NAME : MD.ABUL KALAM"
        android:textSize="20dp"
        android:textColor="#0515fa"
        android:id="@+id/textView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="SON NAME : AHANAF ABDULLAH"
        android:textSize="16dp"
        android:textColor="#fa05a8"
        android:id="@+id/textView1"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DAUGHTER NAME : RAMISA"
            android:textSize="16dp"
            android:textColor="#fa05a8"
            android:id="@+id/textView2"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="BROTHER NAME : MD.ABU SALAH"
        android:textSize="20dp"
        android:textColor="#0515fa"
        android:id="@+id/textView3"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="DAUGHTER NAME : SARAH"
        android:textSize="16dp"
        android:textColor="#fa05a8"
        android:id="@+id/textView4"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SON NAME : JEHAID"
            android:textSize="16dp"
            android:textColor="#fa05a8"
            android:id="@+id/textView5"
            />
    </LinearLayout>

</ScrollView>
